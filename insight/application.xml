<?xml version="1.0" encoding="UTF-8"?>
<model-companion xmlns="http://www.fico.com/xpress/optimization-modeler/model-companion" version="3.0">

    <attachment-config>
        <attachment-tags>
           <attachment-tag name="file-input-example">
                <description>Example files for inputting data into a table. This tag has been marked as 'single' so you may only tag one file this way.</description>
                <attachments>
                    <attachment>input.json</attachment>
                    <attachment>input.csv</attachment>
                </attachments>
            </attachment-tag>
            <attachment-tag name="file-input" usage="single-file">
                <description>File for inputting data into a table. This tag has been marked as 'single' so you may only tag one file this way.</description>
            </attachment-tag>
        </attachment-tags>
    </attachment-config>

    <client>
        <view-group title="vdlx-datagrid">
            <vdl-view title="Basic usage" path="vdl-lang/table/table.vdl" />
            <vdl-view title="Editable tables" path="vdl-lang/table/table-editable.vdl" />
            <vdl-view title="Editable tables - Select inputs" path="vdl-lang/table/table-editable-select.vdl" />
            <vdl-view title="Calculated columns" path="examples/calculated-columns.vdl" />
            <vdl-view title="Column Features" path="examples/column-features.vdl" />
            <vdl-view title="Sorting" path="examples/sorting.vdl" />
            <vdl-view title="Range operators" path="vdl-lang/table/table-range-operators.vdl" />
            <vdl-view title="Conditionals" path="vdl-lang/table/table-conditionals.vdl" />
            <vdl-view title="Index filtering" path="vdl-lang/table/table-index-filtering.vdl" />
            <vdl-view title="Server-side index filtering" path="server-side-index-filtering.vdl" />
            <vdl-view title="Row filtering" path="vdl-lang/table/table-row-filtering.vdl" />
            <vdl-view title="Table selection" path="vdl-lang/table/table-selection.vdl" />
            <vdl-view title="Validation" path="vdl-lang/table/table-validation.vdl" />
            <vdl-view title="Multi-scenario" path="vdl-lang/table/table-multi-scenario.vdl" />
            <vdl-view title="Error handling" path="vdl-lang/table/table-errors.vdl" />
        </view-group>
        <view-group title="Custom Columns and Data">
