                        <vdlx-datagrid-column entity="NAGENTS" width="180">Num Agents</vdlx-datagrid-column>
                        <vdlx-datagrid-column entity="MIN_AGENT_COMMISSION" width="200">Minimum Agent Commission</vdlx-datagrid-column>
                    </vdlx-datagrid>
