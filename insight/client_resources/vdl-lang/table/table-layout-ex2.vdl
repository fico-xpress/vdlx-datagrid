    <vdl-page>
        <vdl-section heading="Example 2 - fixed width tables.">
            <vdl-column size="12">
                <p>Multiple tables, same width but different number of columns.</p>
                <p>Text content in cells aligned left, numerical content aligned right.</p>
                <code-panel>
&lt;vdl-section&gt;
    &lt;vdl-column size=&quot;10&quot;&gt;
        &lt;vdlx-datagrid&gt;
            &lt;vdlx-datagrid-column set=&quot;AGENCY&quot;&gt;ID&lt;/vdlx-datagrid-column&gt;
            &lt;vdlx-datagrid-column entity=&quot;AGENCYNAME&quot;&gt;Agency&lt;/vdlx-datagrid-column&gt;
            &lt;vdlx-datagrid-column entity=&quot;NAGENTS&quot;&gt;Num Agents&lt;/vdlx-datagrid-column&gt;
        &lt;/vdlx-datagrid&gt;
    &lt;/vdl-column&gt;
&lt;/vdl-section&gt;
                </code-panel>
            </vdl-column>
        </vdl-section>

        <vdl-section>
            <vdl-column size="10">
                <vdlx-datagrid>
                    <vdlx-datagrid-column set="AGENCY">ID</vdlx-datagrid-column>
                    <vdlx-datagrid-column entity="AGENCYNAME">Agency</vdlx-datagrid-column>
                    <vdlx-datagrid-column entity="NAGENTS">Num Agents</vdlx-datagrid-column>
                </vdlx-datagrid>
            </vdl-column>
        </vdl-section>

